<Window x:Class="TutorialWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,46,0,0">
        <Button Content="{Binding ElementName=TextBox1,Path=Text}" HorizontalAlignment="Left" Margin="408,146,0,0" VerticalAlignment="Top" Width="75" Name="Button1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="40,146,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="345" Name="TextBox1">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="3">
                    </ScaleTransform>
                    <RotateTransform Angle="-15"></RotateTransform>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>
