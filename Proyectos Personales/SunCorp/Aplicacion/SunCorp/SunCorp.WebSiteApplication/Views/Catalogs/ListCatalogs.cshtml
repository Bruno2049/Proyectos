@using SunCorp.Entities.Generic
@{
    ViewBag.Title = "EditarCatalogos";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    var lista = (List<GenericTable>)ViewBag.ListCatalogSystem;
    var contador = 1;
}

@section Scripts
{
    <script type="text/javascript">
        function Editar(tabla) {
            var tab = tabla.toString();
            alert(tab);
        }
    </script>
}
<br/>
<br/>
<div class="col-md-8 col-lg-offset-2">

    <h4>Catalogos del sistema</h4>

    <br />
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre de la tabla
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in lista)
        {
            <tr>
                <td>
                    @contador
                </td>
                <td>
                    @item.TableName
                </td>
                <td style="align-content: center;">
                    <a id="btnEditar" href="@Url.Action("EditCatalog", "Catalogs", new { nombreTabla = item.TableName })" class="btn btn-default btn-sm">Editar</a>

                    <button name="btnEnviar" class="btn btn-default btn-sm" onclick="Editar('@item.TableName')">Listado</button>
                    <button name="btnEnviar" class="btn btn-default btn-sm" onclick="Editar('@item.TableName')">Reporte</button>
                </td>
            </tr>
            contador++;
        }

    </table>
</div>