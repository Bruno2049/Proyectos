@using SunCorp.Entities
@{
    ViewBag.Title = "UsZona";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    var listZonas = (List<UsZona>)ViewBag.ListCatalogsZonas;
}
@section Head
{
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.css" type="text/css" rel="stylesheet" />
}

@section Scripts
{
    <script type="text/javascript">
        function show_modal(modalName, idZona, nombreZona, descripcion) {
            $("#txtIdZonaActualiza").val(idZona);
            $("#txtNombreZonaActualiza").val(nombreZona);
            $("#txtDescripcionActualiza").val(descripcion);
            $('#' + modalName + '').modal('show');
        }

        function Nuevo() {
            $("#txtIdZonaNuevo").val('');
            $("#txtNombreZonaNuevo").val('');
            $("#txtDescripcionNuevo").val('');
            $('#modalNuevoRegistro').modal('show');
        }

        function NuevoRegistro() {

            var idZona = $("#txtIdZonaNuevo").val();
            var nombreZona = $("#txtNombreZonaNuevo").val();
            var descripcion = $("#txtDescripcionNuevo").val();

            $.ajax({
                type: "POST",
                data: {
                    'idZona': idZona,
                    'nombreZona': nombreZona,
                    'descripcion': descripcion
                },
                url: '@Url.Action("NewRegUsZona", "Catalogs")',
                success: function(response) {
                    $('#modalNuevoRegistro').modal('hide');

                    if (response !== "null") {
                            alert("true");
                            location.reload();
                    } else {
                        alert("No se guardo el registro es posible que ya exista un registro con el mismo id");
                    }
                },
                error:
                    function() {
                        alert("Error en el envio de la informacion hacia el servidor");
                    }
            });
        }

        function Actualiza() {

            var idZona = $("#txtIdZonaActualiza").val();
            var nombreZona = $("#txtNombreZonaActualiza").val();
            var descripcion = $("#txtDescripcionActualiza").val();

            $.ajax({
                type: "POST",
                data: {
                    'idZona': idZona,
                    'nombreZona': nombreZona,
                    'descripcion': descripcion
                },
                url: '@Url.Action("UpdateRegUsZonas", "Catalogs")',
                success: function(response) {

                    $('#modalActualizaRegistro').modal('hide');

                    if (response) {
                        if (response === true)
                        location.reload();
                    } else {
                        alert("No fue posible actualizar el registro");
                    }
                },
                error:
                    function(xhr, status, error) {
                        alert(status + " : " + error);
                    }
            });
        }

        function Ver(modalName, idZona, nombreZona, descripcion) {
            $("#txtIdZonaVer").val(idZona);
            $("#txtNombreZonaVer").val(nombreZona);
            $("#txtDescripcionVer").val(descripcion);
            $('#modalVerRegistro').modal('show');
        }
    </script>
}

<div class="col-md-8 col-lg-offset-2">
    <br />
    <br />

    <h4>Catalogo @ViewBag.Title</h4>

    <h5>En este catalogo se muestran las zonas que se tiene en la republica</h5>

    <br/>

    <table class="table">
        <tr>
            <th>
                IdZona
            </th>
            <th>
                Nombre de la Zona
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Operaciones
            </th>
        </tr>

        @foreach (var item in listZonas)
        {
            <tr>
                <td>
                    @item.IdZona
                </td>
                <td>
                    @item.NombreZona
                </td>
                <td>
                    @item.Descripcion
                </td>
                <td style="align-content: center;">
                    <a id="btnEliminar" href="@Url.Action("EliminaCarCatCarreras", "Catalogs", new {idZona = item.IdZona, nombreZona = item.NombreZona, descripcion = item.Descripcion})" class="btn btn-default btn-sm">Elimina</a>
                    <button name="btnEditar" class="btn btn-default btn-sm" onclick="show_modal('modalActualizaRegistro', '@item.IdZona', '@item.NombreZona', '@item.Descripcion')">Editar</button>
                    <button name="btnVer" class="btn btn-default btn-sm" onclick="Ver('modalVerRegistro', '@item.IdZona', '@item.NombreZona', '@item.Descripcion')">ver</button>
                </td>
            </tr>
        }
    </table>
    <br/>

    <div style="margin-top: 10px; float: right;" class="form-group">
        <button type="button" class="btn btn-default" onclick="Nuevo();">Nuevo</button>
    </div>
</div>

<div class="modal fade" id="modalActualizaRegistro" tabindex="-1" role="dialog" aria-labelledby="modalLabelProducto" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalLabelProducto">
                    <label id="lblUsuario" text="label">Actualizar registro</label>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="row" style="margin: 0 0 0 0; padding: 0 0 0 0;">
                        <div class="form-group col-md-12">
                            @Html.Label("IdZona", null, new { @class = "" })
                            @Html.TextBox("txtIdZonaActualiza", "", new { @class = "form-control", placeholder = "IdTurno", autocomplete = "off" })
                            @Html.Label("Nombre Zona", null, new { @class = "" })
                            @Html.TextBox("txtNombreZonaActualiza", "", new { @class = "form-control", placeholder = "Nombre de turno", autocomplete = "off" })
                            @Html.Label("Descripcion", null, new { @class = "" })
                            @Html.TextBox("txtDescripcionActualiza", "", new { @class = "form-control", placeholder = "Nombre de turno", autocomplete = "off" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" onclick="Actualiza();">Actualizar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalNuevoRegistro" tabindex="-1" role="dialog" aria-labelledby="modalNuevoRegistro" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalLabelProducto">
                    <label id="lblUsuario" text="label">Nuevo registro</label>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="row" style="margin: 0 0 0 0; padding: 0 0 0 0;">
                        <div class="form-group col-md-12">
                            @Html.Label("IdZona", null, new { @class = "" })
                            @Html.TextBox("txtIdZonaNuevo", "", new { @class = "form-control", placeholder = "IdZona", autocomplete = "off" })
                            @Html.Label("Nombre Zona", null, new { @class = "" })
                            @Html.TextBox("txtNombreZonaNuevo", "", new { @class = "form-control", placeholder = "Nombre de Zona", autocomplete = "off" })
                            @Html.Label("Descripcion", null, new { @class = "" })
                            @Html.TextBox("txtDescripcionNuevo", "", new { @class = "form-control", placeholder = "Descripcion", autocomplete = "off" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" onclick="NuevoRegistro();">Agregar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalVerRegistro" tabindex="-1" role="dialog" aria-labelledby="modalNuevoRegistro" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalLabelProducto">
                    <label id="lblUsuario" text="label">Registro</label>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="row" style="margin: 0 0 0 0; padding: 0 0 0 0;">
                        <div class="form-group col-md-12">
                            @Html.Label("IdZona", null, new { @class = "" })
                            @Html.TextBox("txtIdZonaVer", "", new { @class = "form-control", placeholder = "IdTurno", autocomplete = "off" })
                            @Html.Label("Nombre Zona", null, new { @class = "" })
                            @Html.TextBox("txtNombreZonaVer", "", new { @class = "form-control", placeholder = "Nombre de turno", autocomplete = "off" })
                            @Html.Label("Descripcion", null, new { @class = "" })
                            @Html.TextBox("txtDescripcionVer", "", new { @class = "form-control", placeholder = "Nombre de turno", autocomplete = "off" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>