<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Universidad - @ViewBag.Title</title>

    <script src="/Scripts/jquery-2.2.0.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/Sites.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />

    @RenderSection("Head", required: false)
    @RenderSection("Scripts", required: false)

    @{
        string tipoUsuario = ViewBag.TipoUsuario.ToString();
        string nombre = ViewBag.Nombre.ToString();
    }

    <style>
        .navbar {
            height: 10px;
        }

        .navbar-header {
            height: 10px;
        }

        .navbar-inverse {
            height: 10px;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.Label("Bienvenido " + nombre, new { @class = "navbar-right navbar-text text-center text-info" })
            </div>
            <div class="navbar" id="navBar">
                <lu class="nav navbar-nav navbar-right">
                    <li>

                        @Html.Label(tipoUsuario, new { @class = "navbar-text navbar-header" })
                    </li>
                    <li></li>
                    <li>
                        <input type="button" class="btn navbar-btn btn-warning" id="btnLogOut" value="Cerrar Sesion" @*onclick="location.href='@Url.Action("CerrarSesion", "Index")'*@" />
                    </li>
                </lu>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    <div class="principal">
        <br />
        <br />
        <br />
        <nav>
            @*@Html.Action("ObtenArbolMenuWadm", "Home")*@
        </nav>
        <div>
            @RenderBody()
        </div>
        <br />
        <footer class="col-md-12" style="width:100%">
            <p align="left">&copy; @DateTime.Now.Year - Ferakusoft &copy;</p>
            <br />
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>