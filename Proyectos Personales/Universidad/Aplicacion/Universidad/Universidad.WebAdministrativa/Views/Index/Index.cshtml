@model Universidad.Entidades.ControlUsuario.Sesion

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Personal Administrativo</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('form').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (result) {
                        var res = (result);

                        if (res == 'Correcto') {
                            var url = '@Url.Action("Default","Home")';
                            window.location.href = url;
                        } else {
                            alert(res);
                        }
                    }
                });
            });
        });
    </script>
</head>
<body>
    <div id="loginbox" style="margin-top: 100px;" class="col-md-4 col-md-offset-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Login</div>
                <div style="float: right; font-size: 80%; position: relative; top: -10px"><a href="#">Olvide Contraseña?</a></div>
            </div>

            <div style="padding-top: 30px" class="panel-body">

                <div style="display: none" id="login-alert" class="alert alert-danger col-sm-4"></div>

                @using (Html.BeginForm("LogIn", "Index", FormMethod.Post))
                {
                    <div style="margin-bottom: 25px; top: 0; left: 0;" class="input-group col-md-8 col-md-offset-2">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control col-lg-8", @placeholder = "Usuario" })

                    </div>

                    <div style="margin-bottom: 25px" class="input-group col-md-8 col-md-offset-2">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control col-lg-8", @placeholder = "Contraseña" })
                    </div>

                    <div class="input-group col-lg-8">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.RecordarContrasena)
                                recordar contraseña
                            </label>
                        </div>
                    </div>

                    <div style="margin-top: 10px; float: right;" class="form-group">
                        <div class="col-sm-6">
                            <input type="submit" value="Log In" class="btn btn-success" onclick="" />
                        </div>
                    </div>
                }
                @{ Html.EndForm(); }
            </div>
        </div>
    </div>
</body>
</html>