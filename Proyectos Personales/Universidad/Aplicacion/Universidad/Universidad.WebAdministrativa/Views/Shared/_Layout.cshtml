<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Universidad - @ViewBag.Title</title>
    <script src="/Scripts/jquery-2.1.3.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <link href="~/Content/Sites.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    @{
        string tipoUsuario = ViewBag.TipoUsuario.ToString();
        string nombre = ViewBag.Nombre.ToString();
    }

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.Label("Bienvenido " + nombre, new { @class = "navbar-right navbar-text text-center text-info" })
            </div>
            <div class="navbar" id="navBar">
                <lu class="nav navbar-nav navbar-right">
                    <li>

                        @Html.Label(tipoUsuario, new { @class = "navbar-text navbar-header" })
                    </li>
                    <li></li>
                    <li>
                        <button class="btn navbar-btn btn-warning">Cerrar Sesion</button>
                    </li>
                </lu>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <br />
        <br />
        <br />
        <div class="menu" style="width: 100%; height: 1%;">
            @Html.Action("ObtenArbolMenuWadm", "Home")
        </div>
        <div style="width:100%">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p align="left">&copy; @DateTime.Now.Year - Ferakusoft &copy;</p>
            <br />
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>