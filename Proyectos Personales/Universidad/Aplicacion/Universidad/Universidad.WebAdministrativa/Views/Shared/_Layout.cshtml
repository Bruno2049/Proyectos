                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <label class="navbar-right navbar-text text-center text-info">Bienvenido @ViewBag.Nombre</label>
            </div>
            <div class="navbar" id="navBar">
                <lu class="nav navbar-nav navbar-right">
                    <li>
                        <label  Class="navbar-text navbar-header" >@ViewBag.TipoUsuario</label>
                    </li>
                    <li></li>
                    <li>
                        <button Class="btn navbar-btn btn-warning">Cerrar Sesion</button>
                    </li>
                </lu>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <br />
        <br />
        <br />
        @Html.Action("ObtenArbolMenu","Home")
