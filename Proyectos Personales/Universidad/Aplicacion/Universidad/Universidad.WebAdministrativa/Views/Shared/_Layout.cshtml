<% Page Async="true" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Universidad - @ViewBag.Title</title>
    <script src="/Scripts/jquery-2.1.3.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <link href="~/Content/Sites.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#nav li").hover(
                function () {
                    $(this).children('ul').hide();
                    $(this).children('ul').slideDown('fast');
                },
                function () {
                    $('ul', this).slideUp('fast');
                });
        });
    </script>
    <style>
        
        .menu {
            margin: 0px auto;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
            font-size: 14px;
        }

            .menu ul li a:link, div ul li a:visited {
                display: block;
                background-color: #f1f1f1;
                color: #000;
                text-align: center;
                text-decoration: none;
                padding: 4px;
                border-bottom: 1px solid #fff;
                width: 150px;
            }

            .menu ul li a:hover {
                background-color: #ccc;
            }

            .menu ul li ul li a:link, li ul li a:visited {
                display: block;
                background-color: #f1f1f1;
                color: #000;
                text-align: center;
                text-decoration: none;
                padding: 4px;
                border-bottom: 1px solid #fff;
                width: 150px;
            }

            .menu ul li ul li a:hover {
                background-color: #ccc;
            }

            .menu ul {
                list-style-type: none;
                margin: 0px;
                padding: 0px;
            }

                .menu ul li {
                    float: left;
                    margin-left: 5px;
                }

                    .menu ul li ul li {
                        float: none;
                        margin-left: 0px;
                    }

                    .menu ul li ul {
                        display: none;
                    }

            .menu li:hover ul {
                display: block;
                margin: 2px;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <label class="navbar-right navbar-text text-center text-info">Bienvenido @ViewBag.Nombre</label>
            </div>
            <div class="navbar" id="navBar">
                <lu class="nav navbar-nav navbar-right">
                    <li>
                        <label class="navbar-text navbar-header">@ViewBag.TipoUsuario</label>
                    </li>
                    <li></li>
                    <li>
                        <button class="btn navbar-btn btn-warning">Cerrar Sesion</button>
                    </li>
                </lu>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <br />
        <br />
        <br />
        <div class="menu">
            @Html.Action("ObtenArbolMenuWadm", "Home")
        </div>
        <div>
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p align="left">&copy; @DateTime.Now.Year - Ferakusoft &copy;</p>
            <br />
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>