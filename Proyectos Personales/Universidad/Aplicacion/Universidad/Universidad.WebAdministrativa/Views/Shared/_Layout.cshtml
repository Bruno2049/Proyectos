        <br/>
        @RenderBody()
        <hr />
        <footer>
            <p align="left">&copy; @DateTime.Now.Year - Ferakusoft &copy;</p>
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
