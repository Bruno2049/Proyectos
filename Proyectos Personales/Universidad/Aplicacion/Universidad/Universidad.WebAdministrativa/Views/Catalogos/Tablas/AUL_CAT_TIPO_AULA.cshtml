@using Universidad.Entidades

@{
    ViewBag.Title = "AUL_CAT_TIPO_AULA";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lista = (List<AUL_CAT_TIPO_AULA>)ViewBag.ListaCatalogo;
}

@section Head
{
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-datepicker.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap-datepicker.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-select.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap-select.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-multiselect.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap-multiselect.css" type="text/css" rel="stylesheet" />
}

@section Scripts
{
    <script type="text/javascript">
        function show_modal(modalName, idTipoAula, tipoAula, descripcion) {
            $("#txtIdTipoAula").val(idTipoAula);
            $("#txtTipoAula").val(tipoAula);
            $("#txtDescripcion").val(descripcion);

            $('#' + modalName + '').modal('show');
        }

        function Actualiza() {

            var idTipoAula = $("#txtIdTipoAula").val();
            var tipoAula = $("#txtTipoAula").val();
            var descripcion = $("#txtDescripcion").val();

            $.ajax({
                type: "POST",
                data: {
                    'idTipoAula': idTipoAula,
                    'tipoAula': tipoAula,
                    'Descripcion':descripcion
                },
                url: '@Url.Action("ActualizaRegistroAUL_CAT_TIPO_AULA", "Catalogos")',
                success: function (response) {

                    $('#modalCreaProducto').modal('hide');

                    if (response) {
                        if (response == true)
                            alert("true");
                        location.reload();
                    } else {
                        alert("false");
                    }
                },
                error:
                    function (xhr, status, error) {
                        alert(status + " : " + error);
                    }
            });
        }
    </script>
}

<br />

<h4>Catalogo AUL_CAT_TIPO_AULA</h4>

<h5>En este catalogo se descriven los distintos tipos de salon con los cuales se cuenta</h5>

<br />

<div class="col-md-8 col-lg-offset-2">
    <table class="table">
        <tr>
            <th>
                IdTipoAula
            </th>
            <th>
                TipoAula
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Operaciones
            </th>
        </tr>

        @foreach (var item in lista)
        {
            <tr>
                <td>
                    @item.IDTIPOAULA
                </td>
                <td>
                    @item.TIPOAULA
                </td>
                <td>
                    @item.DESCRIPCION
                </td>
                <td style="align-content: center;">
                    <a id="btnEliminar" href="@Url.Action("EditaCatalogo", "Catalogos", new { nombreTabla = item.IDTIPOAULA })" class="btn btn-default btn-sm">Elimina</a>
                    <button name="btnEditar" class="btn btn-default btn-sm" onclick="show_modal('modalCreaProducto','@item.IDTIPOAULA','@item.TIPOAULA','@item.DESCRIPCION')">Editar</button>
                    <button name="btnEnviar" class="btn btn-default btn-sm" onclick="Editar('@item.IDTIPOAULA')">ver</button>
                </td>
            </tr>
        }
    </table>
</div>

<div class="modal fade" id="modalCreaProducto" tabindex="-1" role="dialog" aria-labelledby="modalLabelProducto" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalLabelProducto">
                    <label id="lblUsuario" text="label"></label>
                </h4>
                <a id="lnkReporte" target="_blank" href="#">Reporte Completo</a>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="row" style="margin: 0 0 0 0; padding: 0 0 0 0;">
                        <div class="form-group col-md-12">
                            @Html.Label("IdTipoAula", null, new { @class = "" })
                            @Html.TextBox("txtIdTipoAula", "", new { @class = "form-control", placeholder = "Nombre", autocomplete = "off" })
                            @Html.Label("TipoAula", null, new { @class = "" })
                            @Html.TextBox("txtTipoAula", "", new { @class = "form-control", placeholder = "Apellido Paterno", autocomplete = "off" })
                            @Html.Label("Descripcion", null, new { @class = "" })
                            @Html.TextBox("txtDescripcion", "", new { @class = "form-control", placeholder = "Apellido Paterno", autocomplete = "off" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" onclick="Actualiza();">Actualizar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>