@using System.Web.UI.WebControls
@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "cboNombre";
        settings.Height = new Unit("25px");
        settings.Style.Add("float","left");
        settings.Width = 130;
        settings.SelectedIndex = 0;
        settings.SelectedIndex = -1;
        settings.CallbackRouteValues = new { Controller = "BuscarCreditos", Action = "cboNombre" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.AllowUserInput = true;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
        settings.Properties.TextField = "Nom";
        settings.Properties.ValueField = "Nom";
        //settings.ClientEnabled = false;        
    }
).BindList(ViewData["Nombres"]).GetHtml()