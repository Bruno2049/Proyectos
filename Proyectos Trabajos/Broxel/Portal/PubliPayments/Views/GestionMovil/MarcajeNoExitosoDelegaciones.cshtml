@model DataTable
@using System.Data
@using System.Web.UI.WebControls
@using HorizontalAlign = System.Web.UI.WebControls.HorizontalAlign

@Html.DevExpress().GridView(
    settings =>
    {
        settings.Name = "Marcaje_" + ViewData["despacho"] + "_" + ViewData["supervisor"];
        settings.Width = Unit.Percentage(90);
        settings.CallbackRouteValues = new
        {
            Controller = "GestionMovil",
            Action = "MarcajeNoExitoso"

        };

        settings.KeyFieldName = "Delegacion";
        settings.SettingsBehavior.AllowSort = false;
        settings.SettingsBehavior.HeaderFilterMaxRowCount = 50;
        
        settings.Columns.Add(column => { column.FieldName = "Delegacion"; column.Caption = @"Delegacion"; column.CellStyle.HorizontalAlign = HorizontalAlign.Right; });

        string dias = string.IsNullOrEmpty(ViewData["dias"].ToString()) ? "0" : ViewData["dias"].ToString();

        for (int i = 1; i <= Convert.ToInt32(dias); i++)
        {
            settings.Columns.Add(column => { column.FieldName = i.ToString(); column.Caption = i.ToString(); column.CellStyle.HorizontalAlign = HorizontalAlign.Right; });
        }



        settings.Columns.Add(column => { column.FieldName = "Total"; column.Caption = "Total"; column.CellStyle.HorizontalAlign = HorizontalAlign.Right; });

    }).Bind(Model).GetHtml()
