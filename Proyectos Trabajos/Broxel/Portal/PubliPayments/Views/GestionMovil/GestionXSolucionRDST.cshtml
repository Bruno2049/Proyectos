@model DataTable
@using System.Data
@using System.Web.UI.WebControls
@using HorizontalAlign = System.Web.UI.WebControls.HorizontalAlign

@Html.DevExpress().GridView(
    settings =>
    {
        settings.Name = "Soluciones_" + ViewData["despacho"] + "_" + ViewData["supervisor"];
        settings.Width = Unit.Percentage(90);
        settings.CallbackRouteValues = new
        {
            Controller = "GestionMovil",
            Action = "GestionXSolucionRDST",
            delegacion = ViewData["delegacion"],
            fechaCarga = ViewData["fechaCarga"],
            estFinal = ViewData["estFinal"],
            tipoFormulario = ViewData["tipoFormulario"]

        };

        settings.KeyFieldName = "idDominio";
        settings.SettingsBehavior.AllowSort = false;
        settings.SettingsBehavior.HeaderFilterMaxRowCount = 50;
        settings.Columns.Add(column =>
        {
            column.FieldName = "NombreDominio";
            column.Caption = @"Despacho";
            column.CellStyle.HorizontalAlign = HorizontalAlign.Right;
        });

       
        settings.Columns.Add(column => { column.FieldName = "SinGestionar"; column.Caption = "Sin Gestionar"; column.CellStyle.HorizontalAlign = HorizontalAlign.Right; });
        settings.Columns.Add(column => { column.FieldName = "Gestionadas"; column.Caption = "Gestionadas"; column.CellStyle.HorizontalAlign = HorizontalAlign.Right; });
        settings.Columns.Add(column => { column.FieldName = "Total"; column.Caption = "Total"; column.CellStyle.HorizontalAlign = HorizontalAlign.Right; });
        
        
        settings.SettingsPager.Mode = GridViewPagerMode.ShowAllRecords;
        settings.SettingsDetail.AllowOnlyOneMasterRowExpanded = true;
        settings.SettingsDetail.ShowDetailRow = true;

        settings.SetDetailRowTemplateContent(c => Html.RenderAction("GestionXSolucionRDSTSupervisor", new
        {
            delegacion = ViewData["delegacion"],
            fechaCarga = ViewData["fechaCarga"],
            estFinal = ViewData["estFinal"],
            despacho = DataBinder.Eval(c.DataItem, "idDominio"),
            tipoFormulario = ViewData["tipoFormulario"]

        }));
        settings.PreRender = (sender, e) =>
        {
            //((MVCxGridView)sender).DetailRows.ExpandRow(0);
        };
        settings.Init = (sender, e) =>
        {
            var grid = (MVCxGridView)sender;
            grid.DetailRowGetButtonVisibility += (s, ea) =>
            {
                if (ea.KeyValue != null && ea.KeyValue != DBNull.Value)
                {
                    ea.ButtonState = (string)ea.KeyValue == "0" ? GridViewDetailRowButtonState.Hidden : GridViewDetailRowButtonState.Visible;
                }
            };
        };


    }).Bind(Model).GetHtml()
