@using PubliPayments.Models
@model Login
@{
    Layout = null;
}
<link href="@HttpContext.Current.Application["AplicacionLogos"]faviconyy.png" rel="shortcut icon" type="image/x-icon" />
<link rel="icon" type="image/png" href="@HttpContext.Current.Application["AplicacionLogos"]faviconyy.png">
<meta name="viewport" content="width=device-width" />
<link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
<link href="~/Styles/Principal.css?version=1.0" rel="stylesheet" type="text/css" />
<link href="~/Styles/normalize.css?version=1.0" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery-1.11.0.min.js"></script>
<script src="~/Scripts/watermark.js" type="text/javascript"></script>
<script src="~/Scripts/restrictors.js?version=3.0"></script>
<script type="text/javascript">
    $(document).ready(function (){
        $('#tbDominio').Watermark("Dominio");
        $('#tbUsuario').Watermark("Usuario");
        $('#tbPassword').Watermark("Contraseña");
    });
</script>
<div id="Mask" style="display: none;" class="MaskAjax">
    <img src="~/imagenes/mask-loader.gif" style="position: absolute;margin: auto;top: 0;left: 0;right: 0;bottom: 0;" />
</div>
<div style="margin-top: 50px;">
    <img src="~/imagenes/Logos@{@ViewBag.LogosDir}/logo-login-gm.png" alt="" />
</div>
<div style="margin-top: 60px">
    <label class="InicioSesion" id="lblTitulo">Iniciar Sesión</label>
</div>
<div id="loginContainer">
    @using (Html.BeginForm(null, null, FormMethod.Post, new {@action="/Home", @class = "p-t-15", @role = "form", @autocomplete = "off" }))
    {
        <div class="Combos" style="width: 360px; position: relative; left: 50%; margin-left: -180px; margin-top: 26px;">
            @Html.TextBoxFor(m => m.tbDominio, new { @class = "TextoLogin ", onkeypress = "return validateStringD(event)", size = "47" })
            <br />
            <div style="width: 360px; height: 1px; background-color: #D9D9D9"></div>
            @Html.TextBoxFor(m => m.tbUsuario, new { @class = "TextoLogin", onkeypress = "return validateStringU(event)", size = "47" })
            <br />
            <div style="width: 360px; height: 1px; background-color: #D9D9D9"></div>
            @Html.PasswordFor(m => m.tbPassword, new { @class = "TextoLogin", size = "20" })
            <br />
        </div>
         if (ViewBag.DatosIncorrectos != null)
         {
             <div id="ErrorContainer" style="margin: auto; text-align: center; padding: 15px; height: 20px;">
                 <label style="margin-top: 20px;" class="MensajeAlerta" id="lblError">@{@ViewBag.DatosIncorrectos}</label>
             </div>
         }
        <div style="margin-top: 22px;">
            <input type="submit" id="btLogin" name="btLogin" value="Iniciar Sesión" class="Botones" style="margin-left: 10px;font-size: 21px; width: 370px; height: 50px;" />
        </div>
        <div style="padding: 15px">
            @Html.ActionLink("Olvidé Contraseña","OlvidastePassword",new {controller = "Home"},new {@class = "Contraseña"})
            <div style="display: inline-block; width: 50px;"></div>
            @Html.CheckBoxFor(m => m.cbRecordarme, new { @class = "RecordarDatos", id = "cbRecordarme" })
            @Html.LabelFor(m => m.cbRecordarme, new { @class = "RecordarDatos" })
        </div>
        <div style="margin-top: 22px">
            <label class="TextoFormulario" style="color: black">Se recomienda la utilización de navegadores <a class="Contraseña" href="https://www.google.com.mx/chrome/browser/">Chrome</a>, <a class="Contraseña" href="http://www.microsoft.com/es-mx/download/internet-explorer.aspx">Explorer 10</a> o Superior</label>
        </div>
    }
</div>
<div style="margin-top: 22px">
    <div style="margin-top: 46px">
        <img alt="" src="~/imagenes/Logos@{@ViewBag.LogosDir}/logoYY-login-footer.png" />
    </div>
</div>
<div>
    <label id="lblVersion" class="Version">@ViewBag.Version</label>
</div>

