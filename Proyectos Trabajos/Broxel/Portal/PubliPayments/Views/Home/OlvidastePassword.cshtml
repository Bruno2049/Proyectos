@using PubliPayments.Models
@model OlvidasteContasenia
@{
    Layout = null;
}
<link href="@HttpContext.Current.Application["AplicacionLogos"]faviconyy.png" rel="shortcut icon" type="image/x-icon" />
<link rel="icon" type="image/png" href="@HttpContext.Current.Application["AplicacionLogos"]faviconyy.png">
<meta name="viewport" content="width=device-width" />
<link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
<link href="~/Styles/Principal.css?version=1.0" rel="stylesheet" type="text/css" />
<link href="~/Styles/normalize.css?version=1.0" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery-1.11.0.min.js"></script>
<script src="~/Scripts/watermark.js" type="text/javascript"></script>
<script src="~/Scripts/restrictors.js?version=3.0"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tbDom').Watermark("Dominio");
        $('#tbUser').Watermark("Usuario");
        $('#tbMail').Watermark("Correo Electrónico");
    });
</script>
<div id="Mask" style="display: none" class="MaskAjax"><img src="~/imagenes/mask-loader.gif" style="position: absolute;margin: auto;top: 0;left: 0;right: 0;bottom: 0;" /></div>
<div style="margin-top: 50px;">
    <img src="~/imagenes/Logos@{@ViewBag.LogosDir}/logo-login-gm.png" />
</div>
<div style="margin-top: 60px">
    <label class="InicioSesion" id="lblTitulo">Recuperar Contraseña</label>
</div>
<!--  OlvidasteContraseña -->
<div id="olvidasteContainer">
    @using (Html.BeginForm("OlvidastePassword", "Home", FormMethod.Post, new { @class = "p-t-15", role = "form", @autocomplete = "off" }))
    {
        <div>
            <p style="text-align: center" class="TextoFormulario">Para recuperar sus datos de inicio al sistema, introduzca su dominio y nombre de usuario o su correo electrónico</p>
        </div>
        <div class="Combos" style="width: 360px; position: relative; left: 50%; margin-left: -180px; margin-top: 26px;">
            @Html.TextBoxFor(m => m.tbDom, new { @class = "TextoLogin", onkeypress = "return validateStringD(event)", size = "50" })
            <br />
            <div style="width: 100%; height: 1px; background-color: #D9D9D9"></div>
            @Html.TextBoxFor(m => m.tbUser, new { @class = "TextoLogin", onkeypress = "return validateStringU(event)", size = "50" })
            <br />
            <div style="width: 360px; height: 1px; background-color: #D9D9D9"></div>
            @Html.TextBoxFor(m => m.tbMail, new { @class = "TextoLogin", size = "50" })
            <br />
        </div>
        if(ViewBag.LabelRecuperar != null)
        {
            <div id="errorRecuperarContainer" style="margin: auto; text-align: center; padding: 15px; height: 30px;">
                <label id="labelRecuperar" class="MensajeAlerta">@{@ViewBag.LabelRecuperar}</label>
            </div>
        }
        <div style="margin-top: 22px;">
            <input type="submit" id="btnRecuperar" name="btnRecuperar" value="Recuperar Contraseña" class="Botones" style="margin-left: 10px;font-size: 21px; width: 370px; height: 50px;" />
        </div>
        <div style="padding: 15px">
            @Html.ActionLink("Regresar", "Index", new { controller = "Home"}, new { @class = "Contraseña", hidefocus = "hidefocus" })
        </div>
    }
</div>
<div style="margin-top: 22px">
    <div style="margin-top: 46px">
        <img alt="" src="~/imagenes/Logos@{@ViewBag.LogosDir}/logoYY-login-footer.png" />
    </div>
</div>
<div>
    <label id="lblVersion" class="Version">@{@ViewBag.Version}</label>
</div>

