@using System.Web.UI.WebControls
@using DevExpress.Data
@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "CapturaWebGridView";
        settings.CallbackRouteValues = new {Controller = "CapturaWeb", Action = "CapturaWebGridViewPartial"};

        settings.ControlStyle.CssClass = "GridCelda";
        
        settings.KeyFieldName = "idOrden";
        
        settings.SettingsPager.Position = PagerPosition.Bottom;
        settings.SettingsPager.Visible = true;
        settings.SettingsPager.PageSize = 50;
        settings.SettingsPager.PageSizeItemSettings.Items = new[] {"10", "20", "50", "100"};
        settings.SettingsPager.PageSizeItemSettings.Visible = true;

        settings.Settings.ShowFilterRow = true;
        settings.Settings.ShowGroupPanel = true;
        settings.Settings.ShowHeaderFilterButton = true;

        settings.Styles.AlternatingRow.Enabled = DefaultBoolean.True;

        var columnaOrden = new GridViewDataHyperLinkColumn { Caption = "Orden", FieldName = "idOrden", ReadOnly = true };
        //columnaOrden.CellStyle.Font.Underline = true;
        //columnaOrden.CellStyle.ForeColor = Color.FromArgb(51, 153, 255);
        columnaOrden.PropertiesHyperLinkEdit.NavigateUrlFormatString = "";
        columnaOrden.Settings.AllowHeaderFilter = DefaultBoolean.False;
        columnaOrden.Settings.AutoFilterCondition = AutoFilterCondition.Contains;
        columnaOrden.EditFormSettings.Visible = DefaultBoolean.False;
        columnaOrden.CellStyle.CssClass = "idOrden";
        settings.Columns.Add(columnaOrden);

        var columna = new GridViewDataTextColumn {FieldName = "num_cred", Caption = "Crédito"};
        columna.Settings.AllowHeaderFilter = DefaultBoolean.False;
        columna.Settings.AutoFilterCondition = AutoFilterCondition.Contains;
        settings.Columns.Add(columna);

        columna = new GridViewDataTextColumn {FieldName = "soluciones", Caption = "Solución"};
        columna.Settings.AllowAutoFilter = DefaultBoolean.False;
        columna.Settings.HeaderFilterMode = HeaderFilterMode.CheckedList;
        settings.Columns.Add(columna);

        columna = new GridViewDataTextColumn {FieldName = "idVisita", Caption = "Visita"};
        columna.Settings.AllowAutoFilter = DefaultBoolean.False;
        columna.Settings.HeaderFilterMode = HeaderFilterMode.CheckedList;
        settings.Columns.Add(columna);

        columna = new GridViewDataTextColumn {FieldName = "nombre", Caption = "Nombre"};
        columna.Settings.AllowHeaderFilter = DefaultBoolean.False;
        columna.Settings.AutoFilterCondition = AutoFilterCondition.Contains;
        settings.Columns.Add(columna);

        columna = new GridViewDataTextColumn {FieldName = "calle", Caption = "Calle"};
        columna.Settings.AllowHeaderFilter = DefaultBoolean.False;
        columna.Settings.AutoFilterCondition = AutoFilterCondition.Contains;
        settings.Columns.Add(columna);

        columna = new GridViewDataTextColumn {FieldName = "colonia", Caption = "Colonia"};
        columna.Settings.AllowHeaderFilter = DefaultBoolean.False;
        columna.Settings.AutoFilterCondition = AutoFilterCondition.Contains;
        settings.Columns.Add(columna);

        columna = new GridViewDataTextColumn {FieldName = "municipio", Caption = "Municipio"};
        columna.Settings.AllowAutoFilter = DefaultBoolean.False;
        columna.Settings.HeaderFilterMode = HeaderFilterMode.CheckedList;
        settings.Columns.Add(columna);

        columna = new GridViewDataTextColumn {FieldName = "cp", Caption = "CP"};
        columna.Settings.AllowAutoFilter = DefaultBoolean.False;
        columna.Settings.HeaderFilterMode = HeaderFilterMode.CheckedList;
        settings.Columns.Add(columna);

        columna = new GridViewDataTextColumn {FieldName = "estado", Caption = "Delegación"};
        columna.Settings.AllowAutoFilter = DefaultBoolean.False;
        columna.Settings.HeaderFilterMode = HeaderFilterMode.CheckedList;
        settings.Columns.Add(columna);

        var columnac = new GridViewDataComboBoxColumn {FieldName = "Estatus"};
        columnac.PropertiesComboBox.EnableFocusedStyle = false;
        columnac.PropertiesComboBox.Items.Add("Asignada", "1");
        columnac.PropertiesComboBox.Items.Add("Asignada", "11");
        columnac.PropertiesComboBox.Items.Add("Asignada", "12");
        columnac.PropertiesComboBox.Items.Add("Asignada", "15");
        columnac.PropertiesComboBox.Items.Add("Cancelada", "2");
        columnac.PropertiesComboBox.Items.Add("Reasignada", "2");
        columnac.Settings.AllowAutoFilter = DefaultBoolean.False;
        columnac.Settings.HeaderFilterMode = HeaderFilterMode.CheckedList;
        settings.Columns.Add(columnac);

        columna = new GridViewDataTextColumn {FieldName = "auxiliar", Caption = "Auxiliar"};
        columna.Settings.AllowHeaderFilter = DefaultBoolean.False;
        columna.Settings.AutoFilterCondition = AutoFilterCondition.Contains;
        settings.Columns.Add(columna);

        settings.GroupSummary.Add(new ASPxSummaryItem("idOrden", SummaryItemType.Count));

        settings.Styles.Cell.Font.Size = FontUnit.Parse("12px");
        settings.Styles.EditFormCell.Font.Size = FontUnit.Parse("12px");
        settings.Styles.EditFormTable.Font.Size = FontUnit.Parse("12px");

    });
}
@grid.Bind(Model).GetHtml()