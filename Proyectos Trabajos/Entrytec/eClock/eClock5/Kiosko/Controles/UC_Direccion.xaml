<UserControl x:Class="Kiosko.Controles.UC_Direccion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel  >
            <StackPanel Orientation="Horizontal" >
                <RadioButton x:Name="Rbt_Red" Content="Red" Margin="{DynamicResource MargenGeneral}"/>
                <RadioButton x:Name="Rbt_Usb" Content="USB" Margin="{DynamicResource MargenGeneral}"/>
                <RadioButton x:Name="Rbt_Serial" Content="Serial" Margin="{DynamicResource MargenGeneral}"/>
                <RadioButton x:Name="Rbt_RS485" Content="RS485" Margin="{DynamicResource MargenGeneral}"/>
                <RadioButton x:Name="Rbt_Modem" Content="Modem" Margin="{DynamicResource MargenGeneral}"/>
            </StackPanel>
            
        </StackPanel>


    </Grid>
</UserControl>
