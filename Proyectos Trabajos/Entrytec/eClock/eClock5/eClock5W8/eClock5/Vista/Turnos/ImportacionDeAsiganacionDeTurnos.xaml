        <TextBlock x:Name="Lbl_Turno4"  HorizontalAlignment="Left" Height="30" Margin="20,197,0,0" TextWrapping="Wrap" Text="Fecha de fin de asignación DD/MM/YYYY" VerticalAlignment="Top" Foreground="{StaticResource AzulClaro_Brush}"/>
        <TextBlock x:Name="Lbl_Turno5"  HorizontalAlignment="Left" Height="30" Margin="20,232,0,0" TextWrapping="Wrap" Text="Los campos deberán estar separados por coma (,). Se puede usar MS Exel y guardar el archivo como CSV." VerticalAlignment="Top" Foreground="{StaticResource AzulClaro_Brush}"/>
        <TextBlock  x:Name="Lbl_Turno6" HorizontalAlignment="Left" Height="30" Margin="20,267,0,0" TextWrapping="Wrap" Text="Se usara una linea por reguistro." VerticalAlignment="Top" Foreground="{StaticResource AzulClaro_Brush}"/>
        <TextBlock x:Name="Lbl_Turno7"  HorizontalAlignment="Left" Height="30" Margin="20,302,0,0" TextWrapping="Wrap" Text="Ejemplo:" VerticalAlignment="Top" Foreground="{StaticResource AzulClaro_Brush}"/>
        <TextBlock x:Name="Lbl_Turno8"  HorizontalAlignment="Left" Height="30" Margin="36,337,0,0" TextWrapping="Wrap" Text="Para el templeado numero 125 se tienen los datos siguientes: Empleado= 125, Turno= Matutino, Fecha de inicio= 25/ 03/2013" VerticalAlignment="Top" Foreground="{StaticResource AzulClaro_Brush}"/>
        <TextBlock x:Name="Lbl_Turno9" HorizontalAlignment="Left" Height="30" Margin="36,372,0,0" TextWrapping="Wrap" Text="Se debe hacer de este modo" VerticalAlignment="Top" Foreground="{StaticResource AzulClaro_Brush}"/>
        <TextBlock x:Name="Lbl_Turno10"  HorizontalAlignment="Left" Height="30"  Margin="36,407,0,0" TextWrapping="Wrap" Text="000000125, matutino,25/03/2013, 30/03/2013" VerticalAlignment="Top" Foreground="{StaticResource AzulClaro_Brush}"/>
        
        
        <eClock5:UC_ToolBar  Width="Auto" Margin="0,0,0,525"/>
        <Rectangle Fill="{StaticResource AzulClaro_Brush}" Height="121" Margin="10,472,10,0" Stroke="Black" VerticalAlignment="Top"/>
        <TextBlock x:Name="Lbl_Incidencias10" Margin="26,506,0,0" TextWrapping="Wrap" Text="1. Seleccione el archivo de acceso que desea importar" VerticalAlignment="Top" FontFamily="{StaticResource EntryTecFont}" FontSize="{StaticResource FontSizeParrafo}" Foreground="{StaticResource Blanco_Brush}" Height="32" HorizontalAlignment="Left" Width="348"/>
        <TextBox x:Name="Tbx_Examinar" Height="23" Margin="379,506,123,0" TextWrapping="Wrap"  VerticalAlignment="Top"/>
        <Button x:Name="Btn_Examinar" Content="Examinar" Margin="0,510,30,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="88" Click="Btn_Examinar_Click"/>
        <TextBlock x:Name="Lbl_Incidencias11" Margin="26,541,0,0" TextWrapping="Wrap" Text="2. De clic en importar" VerticalAlignment="Top" FontFamily="{StaticResource EntryTecFont}" FontSize="{StaticResource FontSizeParrafo}" Foreground="{StaticResource Blanco_Brush}" Height="32" HorizontalAlignment="Left" Width="401"/>
        <Button x:Name="Btn_Importar" Content="Importar" Margin="0,554,128,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105"/>

    </Grid>
