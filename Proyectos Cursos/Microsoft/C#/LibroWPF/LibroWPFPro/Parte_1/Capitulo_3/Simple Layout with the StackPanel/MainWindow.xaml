<Window x:Class="Simple_Layout_with_the_StackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Name="btnSimpleStackPanel" Click="BtnSimpleStackPanel_OnClick" Background="#FF92ABF0" Width="180" Height="150">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="Simple Properties" FontSize="18" Foreground="White"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
